<?xml version="1.0" encoding="utf-8"?>
 <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
        android:id="@+id/team_roster_athlete_photo"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:src="@drawable/ic_user"
        android:scaleType="centerCrop" />

        <TextView
        android:id="@+id/team_textview_athlete_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="NomeAtleta"
        android:textColor="#ffffff"
        android:layout_below="@+id/team_roster_athlete_photo"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:maxLines="1"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QB"
            android:id="@+id/team_roster_athlete_position"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_above="@+id/team_textview_athlete_name"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/team_teamviwer_athlete_id"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>